<Window x:Class="WpfApp1.Pushups"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Pushups" Height="1000" Width="1920">
    <Grid>
        <Grid Margin="0,0,0,100">
            <Image x:Name="ColorImage" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="UniformToFill" />
            <Button HorizontalAlignment="Left" Foreground="#4273e2" FontFamily="Montserrat" VerticalAlignment="Top" Height="40" Width="160" Content="Back" Click="ReturnToMain" FontSize="20" Background="White"/>
        </Grid>
        <Grid VerticalAlignment="Bottom"  Height="100">

            <TextBox x:Name="txtleft"  Foreground="#000000" Height="50" FontFamily="Montserrat"  VerticalAlignment="Top" Width="400" FontSize="35" BorderThickness="0" Margin="345,30,1167,0"/>
            <TextBox x:Name="txtright" HorizontalAlignment="Center" Height="50" Margin="250,0,0,0" VerticalAlignment="Center" Width="400" FontSize="45" BorderThickness="0" Foreground="Black"/>

        </Grid>
        


    </Grid>
</Window>
